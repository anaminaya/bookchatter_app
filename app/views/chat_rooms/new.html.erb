<div class="row col-md-8 col-md-offset-2">

  <h1>Create a Chatroom based on a book!</h1>


      <%= form_tag '/products', method: :post do %>

            <div>
              <%= label_tag :name %>
              <%= text_field_tag :name, @products.name %>
            </div>

            <div>
              <%= label_tag :price %>
              <%= text_field_tag :price, @products.price %>
            </div>

            <div>
              <%= label_tag :image %>
              <%= text_field_tag :image %>
            </div>

            <div>
              <%= label_tag :description %>
              <%= text_field_tag :description, @products.description %>
            </div>

            <%= submit_tag "Create product", class: 'btn btn-primary' %>
    <% end %>


</div>
