<div class="row col-md-8 col-md-offset-2">

  <h1>Create a Chatroom based on a book</h1>
    <div class="well">
      <div class="chatroom-form">
        <%= form_tag '/chatrooms', method: :post do  %>
          <div class="input-group">
            <span class="input-group-addon">topic:</span>
            <%= text_field :topic, class: "form-control"%>
          </div>
          <%= submit_tag "Submit", {class: "btn btn-primary", id: "create-chatroom"} %>
        <% end %>
      </div>
    </div>

</div>
