<div class="row col-md-8 col-md-offset-2" id="chatroom-title">
  <h1>Chatrooms</h1>
</div>

<div class="row col-md-8 col-md-offset-2" id="chatrooms">

  <ul id="chatroom-index">
     <% if @chatrooms.any? %>
        <% @chatrooms.each do |chat| %>
        <%= link_to chat.topic, "/chatrooms/#{chat.id}" %>
        <% end %>
     <%else %>
       </ul>
       <p>Be the first one to make a chatroom!</p>
     <% end %>

     <%= button_to "Create Chatroom", "/chatrooms/new", {method: :get, class: "btn btn-success"} %>
</div>
