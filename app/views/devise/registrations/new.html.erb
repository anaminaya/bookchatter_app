<div class="container">
  <div class="text-center">

    <div class="form-block center-block p-30 light-gray-bg border-clear text-left">
      <h2 class="title">Sign Up</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html:{class: "form-horizontal"}) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group has-feedback">
            <div class="field">
              <%= f.label :email, :class => 'col-sm-3 control-label' %><br />
                <div class="col-sm-8">
              <%= f.email_field :email, :class =>'form-control', autofocus: true  %>
              <i class="fa fa-envelope form-control-feedback"></i>
              </div>
            </div>
          </div>

          <div class="form-group has-feedback">
            <div class="field">
              <%= f.label :password, :class => 'col-sm-3 control-label' %><br />

              <% if @minimum_password_length %>
                <div class="col-sm-8 col-sm-offset-3">
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
                </div>

              <div class="col-sm-8 col-sm-offset-3">
                <%= f.password_field :password, autocomplete: "off", :class =>'form-control' %>
                <i class="fa fa-lock form-control-feedback"></i>
              </div>
            </div>
          </div>

          <br />

          <div class="form-group has-feedback">
            <div class="field">
              <%= f.label :password_confirmation, :class => 'col-sm-3 control-label'%><br />
              <div class="col-sm-8">
                <%= f.password_field :password_confirmation, autocomplete: "off", :class =>'form-control' %>
                <i class="fa fa-lock form-control-feedback"></i>
              </div>
            </div>
          </div>

          <br />

          <div class="form-group">
            <div class="col-sm-8 col-sm-offset-5 ">
              <div class="actions">
                <%= f.submit "Sign up", :class => 'btn btn-group btn-default btn-animated' %><br/>
              </div>
            </div>
          </div>

        <% end %>
    </div>
  </div>
</div>
