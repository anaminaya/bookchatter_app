<div class="container">
  <div class="text-center">
    <div id="logo" class="logo">
      <h3 class="margin-clear"><a href="/welcome">BookChatter</a></h3>
    </div>

    <div class="form-block center-block p-30 light-gray-bg border-clear text-left">
      <h2 class="title">Sign In</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>

        <div class="form-group has-feedback">
          <div class="field">
            <%= f.label :email, class: "col-sm-3 control-label" %><br />
            <div class="col-sm-8">
            <%= f.email_field :email, class: "form-control", autofocus: true %>
            <i class="fa fa-envelope form-control-feedback"></i>
            </div>
          </div>
        </div>

        <div class="form-group has-feedback">
          <div class="field">
            <%= f.label :password, class: "col-sm-3 control-label" %><br />
            <div class="col-sm-8">
              <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
              <i class="fa fa-lock form-control-feedback"></i>
            </div>
          </div>
        </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <div class="col-sm-8 col-sm-offset-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        </div>
      <% end -%>
    <div class="form-group">
      <div class="col-sm-8 col-sm-offset-3">
        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-group btn-default btn-animated" %><br/>
        </div>
      </div>
    </div>
    <% end %>

      <%= render "devise/shared/links" %>

  </div>
</div>
